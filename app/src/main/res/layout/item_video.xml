<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title: "
        android:textColor="#0091EA" />

    <TextView
        android:id="@+id/txt_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name: "
        android:textColor="#0091EA" />

    <TextView
        android:id="@+id/txt_mineType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mine Type: "
        android:textColor="#0091EA" />

    <TextView
        android:id="@+id/txt_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size: "
        android:textColor="#0091EA" />

    <TextView
        android:id="@+id/txt_dateAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Added: "
        android:textColor="#0091EA" />

    <TextView
        android:id="@+id/txt_dateModified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Modified: "
        android:textColor="#0091EA" />

    <TextView
        android:id="@+id/txt_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data: "
        android:textColor="#0091EA" />

    <TextView
        android:id="@+id/txt_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height: "
        android:textColor="#0091EA" />

    <TextView
        android:id="@+id/txt_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Width: "
        android:textColor="#0091EA" />

    <TextView
        android:id="@+id/txt_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album: "
        android:textColor="#0091EA" />

    <TextView
        android:id="@+id/txt_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist: "
        android:textColor="#0091EA" />

    <TextView
        android:id="@+id/txt_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration: "
        android:textColor="#0091EA" />

    <TextView
        android:id="@+id/txt_bucketID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bucket ID: "
        android:textColor="#0091EA" />

    <TextView
        android:id="@+id/txt_bucketDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bucket Display Name: "
        android:textColor="#0091EA" />

    <TextView
        android:id="@+id/txt_resolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resolution: "
        android:textColor="#0091EA" />
</androidx.appcompat.widget.LinearLayoutCompat>