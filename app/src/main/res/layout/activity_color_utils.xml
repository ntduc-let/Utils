<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ColorUtilsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_randomColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Random Color"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_getDisabledColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DisabledColor"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_setColorAlpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Color Alpha"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/edt_tint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title Text Color" />

        <TextView
            android:id="@+id/txt_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Body Text Color" />

    </LinearLayout>
</ScrollView>
